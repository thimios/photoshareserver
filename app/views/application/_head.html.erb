  <%= javascript_include_tag "https://maps.google.com/maps/api/js?sensor=false&amp;language=en" %>

  <script type="text/javascript">
      function initialize(lat, lon) {
          var myLatlng = new google.maps.LatLng(lat,lon);

          //var image = 'assets/pin-me.png';
          var image = new google.maps.MarkerImage('<%= path_to_image("/assets/pin-me.png") %>',null,null,null,
                  new google.maps.Size(34, 44)
          );

          var mapOptions = {
              zoom: 15,
              center: myLatlng,
              mapTypeId: google.maps.MapTypeId.ROADMAP,
              disableDefaultUI: true
          }
          var map = new google.maps.Map(document.getElementById('map'), mapOptions);



          var marker = new google.maps.Marker({
              position: myLatlng,
              map: map,
              icon: image
          });
      }
  </script>


