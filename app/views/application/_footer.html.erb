  <script>
      $(document).ready(function () {
          $('.photoContainer').each(function (index) {
              var min = 1;
              var max = 4;
              var random = Math.floor(Math.random() * (max - min + 1)) + min;
              $(this).addClass('random' + random);
          });
      });
  </script>
