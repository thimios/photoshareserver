
<a class="photoContainer" href="<%= photo_details_path photo %>">
  <div class="scotch"></div>
  <div class="overlay"></div>
  <div class="photoThumb">
    <img alt="<%= photo.title %>" src=<%= photo.image.url(:medium_retina) %> />
  </div>
  <div class="photoTitle"><%= truncate(photo.title, :length => 27, :separator => ' ') %></div>
  <div class="photoAuthor">by <%= truncate(photo.author_name, :length => 17 ) %></div>
</a>