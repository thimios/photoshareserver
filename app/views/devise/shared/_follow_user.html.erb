<% unless user == current_user %>
    <% if current_user.following?(user) %>

        <%= form_tag("/users/#{user.id}/unfollow", :method => "get") do %>
            <%= submit_tag("Un-Follow #{user.username}") %>
        <% end %>

    <% else %>
        <%= form_tag("/users/#{user.id}/follow", :method => "get") do %>
            <%= submit_tag("Follow #{user.username}") %>
        <% end %>
    <% end %>
<% end %>